<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4"
  xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

  <servlet>
    <servlet-name>servlet-login</servlet-name>
    <servlet-class>by.tms.servlet_login.ServletLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>servlet-login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>servlet-students-db</servlet-name>
    <servlet-class>by.tms.servlet_students_db.ServletStudentsDB</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>servlet-students-db</servlet-name>
    <url-pattern>/studentsDB</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>servlet-showDB</servlet-name>
    <servlet-class>by.tms.servlet_show_db.ServletShowDB</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>servlet-showDB</servlet-name>
    <url-pattern>/showDB</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>servlet_student_add</servlet-name>
    <servlet-class>by.tms.servlet_student_add.ServletStudentAdd</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>servlet_student_add</servlet-name>
    <url-pattern>/studAdd</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>servlet_stud_upd</servlet-name>
    <servlet-class>by.tms.servlet_student_update.ServletStudUpd</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>servlet_stud_upd</servlet-name>
    <url-pattern>/studUPD</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>servlet_stud_del</servlet-name>
    <servlet-class>by.tms.servlet_student_delete.ServletStudDel</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>servlet_stud_del</servlet-name>
    <url-pattern>/studDEL</url-pattern>
  </servlet-mapping>

</web-app>